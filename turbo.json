{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"BACKEND_URL",
		"GITHUB_CLIENT_ID",
		"GITHUB_CLIENT_SECRET",
		"AUTH_SECRET",
		"PORT",
		"ALLOWED_HEADERS",
		"WEB_URL",
		"REDIS_URL",
		"ADMIN_EMAIL",
		"TOKEN_SECRET",
		"GITHUB_WEBHOOK_SECRET",
		"GITHUB_APP_ID",
		"GITHUB_PRIVATE_KEY",
		"GEMINI_API_KEY",
		"SUMMARIZATION_LLM_BASE_URL",
		"SUMMARIZATION_LLM_PROVIDER",
		"KHALTI_SECRET_KEY",
		"KHALTI_GATEWAY_URL",
		"REDIS_PORT",
		"REDIS_HOST",
		"REDIS_PASSWORD"
	]
}
